{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "strictNullChecks": true
  },
  "include": [
    "./types/**/*",
    "./src/**/*"
  ]
}
