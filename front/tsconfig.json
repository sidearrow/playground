{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./types/**/*",
    "./src/**/*",
  ]
}
