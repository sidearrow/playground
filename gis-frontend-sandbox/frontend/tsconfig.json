{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2018",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
